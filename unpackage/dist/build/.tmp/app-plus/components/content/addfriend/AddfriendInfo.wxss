.addfriendinfo {
  background-color: #F8F8F8;
  height: 100vh;
}
.addfriendinfo .addfriendinfo-top {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background-color: #FFFFFF;
    padding: 25rpx 0 55rpx 0;
    border-bottom: 1rpx solid rgba(100, 100, 100, 0.1);
}
.addfriendinfo .addfriendinfo-top .top-left {
      padding: 0 30rpx;
}
.addfriendinfo .addfriendinfo-top .top-left .left-headimg {
        border-radius: 12rpx;
        width: 120rpx;
        height: 120rpx;
}
.addfriendinfo .addfriendinfo-top .top-left .iconfont-img {
        font-family: 'iconfont';
        font-size: 120rpx;
        border-radius: 12rpx;
}
.addfriendinfo .addfriendinfo-top .top-right {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
.addfriendinfo .addfriendinfo-top .top-right .nickname {
        font-size: 40rpx;
        font-weight: bold;
}
.addfriendinfo .addfriendinfo-top .top-right .little-font {
        margin: 3rpx 0;
        font-size: 30rpx;
        color: #989898;
}
.addfriendinfo .myborderlist {
    margin-bottom: 25rpx;
}
.addfriendinfo .list3, .addfriendinfo .list4 {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 20rpx 0;
    background-color: #FFFFFF;
}
.addfriendinfo .list3 .img, .addfriendinfo .list4 .img {
      margin-right: 15rpx;
}
.addfriendinfo .list3 .img image, .addfriendinfo .list4 .img image {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        width: 60rpx;
        height: 60rpx;
}
.addfriendinfo .list3 .send-msg, .addfriendinfo .list4 .send-msg {
      color: #576A92;
}
.addfriendinfo .list3 {
    border-bottom: 1rpx solid rgba(100, 100, 100, 0.1);
}
.addfriendinfo .cli-hover:active {
    background-color: #f1f1f1;
}

