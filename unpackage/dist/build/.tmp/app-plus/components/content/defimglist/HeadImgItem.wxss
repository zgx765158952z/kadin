.head-img-item .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.head-img-item .item .start-img {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: auto;
    margin-right: 27rpx;
    padding-left: 27rpx;
}
.head-img-item .item .start-img image {
      width: 92rpx;
      height: 92rpx;
      border-radius: 10rpx;
}
.head-img-item .item .end-info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    overflow: hidden;
    padding: 18rpx 0;
    border-bottom: 1rpx solid rgba(100, 100, 100, 0.1);
}
.head-img-item .item .end-info .left {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}
.head-img-item .item .end-info .left .title {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 36rpx;
        color: #181818;
}
.head-img-item .item .end-info .left .msg {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 28rpx;
        color: #B2B2B2;
}
.head-img-item .item .end-info .right {
      width: auto;
      min-width: 118rpx;
      margin: 0 27rpx;
      text-align: center;
      font-size: 36rpx;
      color: #B2B2B2;
}
.head-img-item .item .noBorder {
    border-bottom: none;
}

