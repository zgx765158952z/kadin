.change-label {
  height: 100vh;
  font-size: 28rpx;
}
.change-label .label-content {
    border-top: 1rpx solid rgba(100, 100, 100, 0.1);
    padding: 30rpx;
    box-sizing: border-box;
}
.change-label .label-content .label-content-top {
      position: relative;
      padding: 20rpx 0;
      box-sizing: border-box;
}
.change-label .label-content .label-content-top .label-content-top-item {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        margin: 10rpx;
        padding: 6rpx 18rpx;
        color: #07C160;
        box-shadow: 0 0 5rpx #07C160;
        border-radius: 30rpx;
        text-align: center;
        background-color: #FFFFFF;
}
.change-label .label-content .label-content-top .label-content-top-item .add-label .add-label-icon {
          font-size: 20rpx;
}
.change-label .label-content .label-content-top .label-content-top-input {
        margin: 20rpx 0;
        padding: 10rpx 30rpx;
        box-sizing: border-box;
        font-size: 32rpx;
        background-color: #FFFFFF;
        border-radius: 30rpx;
        text-align: center;
        width: 50%;
}
.change-label .label-content .label-content-top::after {
        content: '';
        position: absolute;
        bottom: -1rpx;
        left: 0;
        width: 100%;
        height: 1rpx;
        border-bottom: 1rpx solid rgba(70, 70, 70, 0.1);
}
.change-label .label-content .label-content-btm {
      margin-top: 30rpx;
}
.change-label .label-content .label-content-btm .label-content-btm-first {
        margin: 20rpx;
        color: #c0c0c0;
}
.change-label .label-content .label-content-btm .all-label .all-label-item {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        margin: 10rpx;
        padding: 6rpx 18rpx;
        color: #333;
        box-shadow: 0 0 5rpx #666666;
        border-radius: 30rpx;
        text-align: center;
        background-color: #FFFFFF;
}
.change-label .label-content .label-content-btm .all-label .all-label-item-active {
        color: #07C160 !important;
        box-shadow: 0 0 5rpx #07C160 !important;
}
.label-content-top, .all-label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-flow: row wrap;
          flex-flow: row wrap;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-align-content: center;
          align-content: center;
}
.label-content-top-item-hover {
  color: #FFFFFF !important;
  background-color: #05AE55 !important;
