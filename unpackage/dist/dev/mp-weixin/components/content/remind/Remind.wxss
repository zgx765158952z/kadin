.remind {
  color: #666666;
  min-height: 100vh;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-bottom: 100rpx;
  background-color: #F8F8F8;
}
.remind .remind-head .remind-head-son {
  text-align: center;
  font-size: 36rpx;
}
.remind .remind-msg {
  position: relative;
  color: #333;
  background-color: #FFFFFF;
  margin-top: 60rpx;
}
.remind .remind-msg .remind-msg-son {
  padding: 20rpx 30rpx;
  max-height: 150rpx;
  font-size: 32rpx;
}
.remind .all-list {
  margin: 60rpx 0;
}
.remind .all-list .remind-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 15rpx 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #FFFFFF;
}
.remind .all-list .remind-list .remind-list-left {
  width: auto;
}
.remind .all-list .remind-list .remind-list-right {
  text-align: right;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.remind .all-list .remind-list .remind-list-right .remind-list-right-icon {
  color: #999;
}
.remind .all-list .remind-list .right-switch {
  margin-left: 10rpx;
}
.remind .all-list .remind-list2 {
  padding: 25rpx 30rpx !important;
}
.remind .all-list .first-remind-list {
  padding: 15rpx 0 15rpx 30rpx;
}
.remind .all-list .switch-list, .remind .all-list .time-val-list {
  border-bottom: 1rpx solid rgba(144, 144, 144, 0.1);
}
.remind .remind-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #fff;
  -webkit-box-shadow: 0 -3rpx 3rpx #999;
          box-shadow: 0 -3rpx 3rpx #999;
}
.remind .remind-footer .remind-footer-left {
  min-width: 36rpx;
  font-size: 36rpx;
  margin-left: 30rpx;
}
.remind .remind-footer .remind-footer-right {
  min-width: 36rpx;
  font-size: 36rpx;
  margin-right: 30rpx;
}
.remind .remind-footer .remind-footer-left::active, .remind .remind-footer .remind-footer-right::active {
  color: #f1f1f1;
}
.remind .remind-footer .remind-footer-center {
  font-size: 32rpx;
}

