}
.publish .publish-img-list {
  margin: 0 auto;
}
.publish .publish-img-list > view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
